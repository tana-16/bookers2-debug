<% book.comments.each do |comment| %>
  <!--<div class="row">-->
  <tr>
    <td>
      <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td><%= comment.comment_content %></td>
    <%if current_user == comment.user %>
      <!--<div class="bg-info">-->
      <td><%= link_to 'Destroy', book_comment_path(comment.book_id,comment.id), method: :delete, remote: true,  class: "btn btn-sm btn-danger"%></td>
      <!--</div>-->
    <% end %>
  </tr>
  <!--</div>-->
<% end %>